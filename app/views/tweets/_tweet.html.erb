<div class="grid_8 bubble">
  <div class="grid_8 tweet-text">
    <div class="grid_1 alpha">
      <%= image_tag "used/#{tweet.mood}" %>
    </div>
    <div class="grid_6 suffix_1 omega">
      <%= auto_link(simple_format(h(tweet.text)), :html => {:class => 'auto-link', :target => :_blank } ) %>
    </div>
  </div>
  <div class="grid_8 tweet-avatar">
    <div class="grid_3 prefix_2 alpha">
      <%= image_tag tweet.profile_image_url, :width => 48, :height => 48 %>
    </div>
    <div class="grid_3 pull_1 omega">
      <%= tweet.from_user %>
    </div>
  </div>
</div>
