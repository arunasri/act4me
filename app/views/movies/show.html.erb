
<% content_for :facebook_meta do %>
<meta property="og:title" content="Pirates of the Caribbean: On Stranger Tides" />
	        <meta property="og:type" content="movie" />

	        <meta property="og:image" content="http://content6.flixster.com/movie/11/15/67/11156760_pro.jpg" />
	        <meta property="og:url" content="http://www.rottentomatoes.com/m/pirates_of_the_caribbean_on_stranger_tides/" />
			<meta property="og:site_name" content="Reviewumpire">
<% end %>

<% cache(:action => 'show', :controller => 'movies', :id => @movie.id, :content_type => 'html') do %>

  <% content_for :title do %>
    <%= "#{@movie.name} Review" %> 
  <% end %>

  <% content_for :keywords do %>
    <%= "#{@movie.name} movie reviews, #{@movie.name} tweets, #{@movie.name} talk, #{@movie.name} positive talk, #{@movie.name} negative talk" %> 
  <% end %>

  <% content_for :subheader do %>
    <%= @movie.name %>
  <% end %>


  <% content_for :color do %>
    red
  <% end %>


  <div id="poster-area">
    <div class="container_24">
      <%= render @movie %>
    </div>
  </div>

  <div class="sub-header-wrapper <%= content_for :color %>">
    <div class="content header">
      <%= image_tag "used/twitter_logo_right.png" %>
      <h1> </h1>
    </div>
  </div>

  <div id="twitter-area">
    <div class="container_24">
      <%= render :partial => "/tweets/tweets", :locals => { :tweets => @tweets } %>
    </div>
  </div>
<% end %>
