<% content_for :title do %>
  Review Umpire
<% end %>

<% content_for :description do %>
  Aggregates reviews of telugu movies.
<% end %>

<% content_for :keywords do %>
  <%= "telugu movie reviews, telugu movie tweets" %> 
<% end %>

<% content_for :subheader do %>
  Recent Releases
<% end %>

<div id="index-page">
  <% Movie.limit(4).each do | movie | %>
    <div class="grid_6">
      <div class="grid_6">
        <%= link_to image_tag(movie.vertical.thumb.url.to_s), movie %>
      </div>
      <div class="grid_6 movie-info">
        <%= link_to movie.name, movie, :class => 'title' %>
        <%= link_to movie.computed_score, movie %>
      </div>
    </div>
  <% end %>
</div>
